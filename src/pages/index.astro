---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const latestPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout title="Home">
  <section class="bg-gradient-to-b from-gray-50 to-white py-12 sm:py-16 lg:py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl md:text-5xl lg:text-6xl">
          Arstella Tech Blog
        </h1>
        <p class="mx-auto mt-4 sm:mt-6 max-w-2xl text-base sm:text-lg text-gray-600 px-4">
          Arstella Inc.のエンジニアが技術的な知見や経験を共有するブログです。
        </p>
        <div class="mt-8 sm:mt-10">
          <a href="/blog" class="inline-block rounded-md bg-indigo-600 px-6 py-3 sm:px-8 text-base font-medium text-white hover:bg-indigo-700 transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
            すべての記事を見る
          </a>
        </div>
      </div>
    </div>
  </section>

  <section class="py-12 sm:py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-6 sm:mb-8">最新の記事</h2>
      <div class="grid gap-6 sm:gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {latestPosts.map((post) => (
          <article class="group relative flex flex-col rounded-lg border bg-white p-5 sm:p-6 hover:shadow-lg transition-all hover:-translate-y-0.5">
            <div class="flex-1">
              <div class="flex flex-wrap items-center gap-2 text-xs text-gray-500">
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('ja-JP')}
                </time>
                {post.data.category && (
                  <span class="rounded-full bg-gray-100 px-2 py-0.5 sm:px-3 sm:py-1">
                    {post.data.category}
                  </span>
                )}
              </div>
              <div class="mt-3">
                <h3 class="text-base sm:text-lg font-semibold text-gray-900 group-hover:text-indigo-600 transition-colors">
                  <a href={`/blog/${post.slug}`}>
                    <span class="absolute inset-0" aria-hidden="true"></span>
                    {post.data.title}
                  </a>
                </h3>
                <p class="mt-2 sm:mt-3 text-sm text-gray-600 line-clamp-3">
                  {post.data.description}
                </p>
              </div>
            </div>
            <div class="mt-4 sm:mt-6">
              <span class="relative z-10 inline-flex items-center text-sm font-semibold text-indigo-600 group-hover:text-indigo-500 transition-colors">
                続きを読む
                <svg class="ml-1 h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>