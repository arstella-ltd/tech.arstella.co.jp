---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const latestPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout title="Home">
  <section class="relative overflow-hidden">
    <!-- 背景グラデーション -->
    <div class="absolute inset-0 gradient-primary opacity-5"></div>
    <div class="absolute inset-0 bg-gradient-to-br from-slate-50 via-white to-blue-50"></div>
    
    <!-- メインコンテンツ -->
    <div class="relative mx-auto max-w-7xl px-4 py-20 sm:px-6 sm:py-24 lg:px-8 lg:py-32">
      <div class="text-center space-loose">
        <!-- メインタイトル -->
        <div class="space-normal">
          <h1 class="text-5xl font-bold tracking-tight sm:text-6xl lg:text-7xl xl:text-8xl">
            <span class="block" style="font-family: var(--font-heading); color: var(--color-gray-900); letter-spacing: -0.03em;">
              Arstella
            </span>
            <span class="block text-gradient mt-2" style="line-height: 1.1; padding-bottom: 0.15em;">
              Tech Blog
            </span>
          </h1>
        </div>
        
        <!-- サブタイトル -->
        <div class="mx-auto max-w-3xl space-normal">
          <p class="text-xl sm:text-2xl lg:text-3xl font-medium leading-relaxed" style="color: var(--color-gray-600); font-family: var(--font-heading); letter-spacing: -0.01em;">
            エンジニアが技術的な知見や経験を共有する
          </p>
          <p class="text-lg sm:text-xl text-gray-500 mt-4">
            最新の技術トレンドから実践的なノウハウまで、幅広い情報をお届けします
          </p>
        </div>
        
        <!-- CTA ボタン -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mt-12">
          <a href="/blog" class="btn-primary text-lg px-8 py-4 rounded-xl">
            すべての記事を見る
            <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5-5 5M6 12h12" />
            </svg>
          </a>
          <a href="/categories" class="btn-secondary text-lg px-8 py-4 rounded-xl">
            カテゴリから探す
          </a>
        </div>
        
        <!-- ソーシャルプルーフ -->
        <div class="mt-16 pt-8 border-t border-gray-200">
          <p class="text-sm text-gray-500 font-medium">
            最新の記事とノウハウをお届け
          </p>
          <div class="flex justify-center items-center space-x-8 mt-4">
            <div class="flex items-center space-x-2">
              <svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm font-medium text-gray-700">実践的な技術情報</span>
            </div>
            <div class="flex items-center space-x-2">
              <svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm font-medium text-gray-700">AI活用</span>
            </div>
            <div class="flex items-center space-x-2">
              <svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm font-medium text-gray-700">エンジニア目線</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 sm:py-20 lg:py-24 bg-slate-50">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <!-- セクションヘッダー -->
      <div class="text-center mb-12 sm:mb-16">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold" style="font-family: var(--font-heading); color: var(--color-gray-900); letter-spacing: -0.02em;">
          最新の記事
        </h2>
        <p class="mt-4 text-lg sm:text-xl text-gray-600 max-w-2xl mx-auto">
          エンジニアの実践的な知見とノウハウを厳選してお届け
        </p>
      </div>
      
      <!-- 記事カード -->
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {latestPosts.map((post) => (
          <article class="card-interactive group relative">
            <div class="card-content space-normal">
              <!-- メタ情報 -->
              <div class="flex flex-wrap items-center gap-3 text-sm">
                <time datetime={post.data.pubDate.toISOString()} style="color: var(--color-gray-500);">
                  {post.data.pubDate.toLocaleDateString('ja-JP')}
                </time>
                {post.data.category && (
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium" 
                        style="background-color: var(--color-primary); color: white;">
                    {post.data.category}
                  </span>
                )}
              </div>
              
              <!-- タイトルとコンテンツ -->
              <div class="space-snug">
                <h3 class="blog-card-title">
                  {post.data.title}
                </h3>
                <p class="text-sm sm:text-base line-clamp-3" style="color: var(--color-gray-600); line-height: 1.6;">
                  {post.data.description}
                </p>
              </div>
              
              <!-- CTA -->
              <div class="pt-4">
                <span class="relative z-10 inline-flex items-center text-sm font-semibold link">
                  続きを読む
                  <svg class="ml-2 h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </span>
              </div>
            </div>
            
            <!-- カード全体をクリック可能にするリンク -->
            <a href={`/blog/${post.slug}`} class="absolute inset-0 z-0" aria-label={post.data.title}></a>
          </article>
        ))}
      </div>
      
      <!-- もっと見るリンク -->
      <div class="text-center mt-12">
        <a href="/blog" class="btn-secondary text-base px-8 py-3 rounded-xl">
          すべての記事を見る
          <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>